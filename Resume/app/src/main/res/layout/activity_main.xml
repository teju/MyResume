<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/White">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="match_parent"
            android:scaleType="fitXY"
            android:id="@+id/splash_img"
            android:src="@drawable/splash_img"
            android:layout_height="match_parent">
        </ImageView>
        <ImageView
            android:layout_width="match_parent"
            android:scaleType="fitXY"
            android:id="@+id/our_works_bg"
            android:alpha="0.6"
            android:visibility="gone"
            android:src="@drawable/our_works_bg"
            android:layout_height="match_parent">
        </ImageView>

        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/rllanding"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="match_parent"
                android:adjustViewBounds="true"
                android:id="@+id/splash_logo"
                android:src="@drawable/app_logo"
                android:outlineProvider="background"
                android:layout_gravity="center"
                android:visibility="visible"
                android:layout_height="150dp">
            </ImageView>
            <ImageView
                android:layout_width="200dp"
                android:adjustViewBounds="true"
                android:id="@+id/app_o_gee"
                android:src="@drawable/app_o_gee"
                android:outlineProvider="background"
                android:layout_gravity="center"
                android:visibility="gone"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">
            </ImageView>

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:textAllCaps="true"
            android:id="@+id/subtitle"
            android:textColor="@color/Black"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:fontFamily="@font/shipporimincho_extrabold"
            android:layout_centerVertical="true"
            android:paddingTop="160dp"
            android:textSize="16dp"
            android:layout_height="wrap_content">

        </TextView>
        <FrameLayout
            android:id="@+id/layoutFragment"
            android:background="@android:color/transparent"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="300dp"
                android:visibility="gone"
                android:id="@+id/left_project_list"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:alpha="0.9"
                    android:visibility="visible"
                    android:src="@drawable/semi_circle"
                    app:layout_constraintStart_toStartOf="parent">
                </ImageView>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv"
                    android:layout_width="match_parent"
                    android:clipToPadding="false"
                    android:layout_centerVertical="true"
                    android:layout_height="match_parent" />
            </RelativeLayout>
            <ImageView
                android:layout_width="50dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="-20dp"
                android:layout_toRightOf="@+id/left_project_list"
                android:id="@+id/arrow_right_drop_circle"
                android:visibility="gone"
                android:rotation="180"
                android:src="@drawable/arrow_right_drop_circle"
                android:layout_height="50dp">

            </ImageView>

        </RelativeLayout>


    </RelativeLayout>


</FrameLayout>
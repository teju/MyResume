<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@color/White"
    xmlns:android="http://schemas.android.com/apk/res/android">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/flTop"
                android:background="@android:color/transparent" />
            <View
                android:layout_width="match_parent"
                android:background="@drawable/sign_in_bg"
                android:visibility="visible"
                android:layout_height="match_parent">
            </View>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginBottom="30dp"
            android:layout_alignParentBottom="true"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="match_parent"
                    android:adjustViewBounds="true"
                    android:id="@+id/splash_logo"
                    android:src="@drawable/app_logo"
                    android:outlineProvider="background"
                    android:layout_gravity="center_horizontal"
                    android:visibility="visible"
                    android:layout_height="150dp">
                </ImageView>

                <ImageView
                    android:layout_width="150dp"
                    android:src="@drawable/app_o_gee_white"
                    android:textAlignment="center"
                    android:adjustViewBounds="true"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/White"
                    android:fontFamily="@font/poppins_bold"
                    android:layout_height="wrap_content">
                </ImageView>
                <TextView
                    android:layout_width="match_parent"
                    android:text="The Pinnacle for the evolution\nof future"
                    android:id="@+id/subtitle"
                    android:textColor="@color/White"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/poppins_bold"
                    android:layout_centerHorizontal="true"
                    android:textAlignment="center"
                    android:layout_centerVertical="true"
                    android:textSize="16dp"
                    android:layout_height="wrap_content">

                </TextView>
                <com.google.android.gms.common.SignInButton
                    android:id="@+id/btn_sign_in"
                    android:visibility="gone"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"/>
                <RelativeLayout
                    android:layout_width="150dp"
                    android:layout_marginTop="40dp"
                    android:id="@+id/gplus_signup"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/rounded_border"
                    android:layout_height="45dp">
                    <ImageView
                        android:layout_width="20dp"
                        android:src="@drawable/google"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:layout_height="20dp">
                    </ImageView>
                    <TextView
                        android:layout_width="match_parent"
                        android:text="Google"
                        android:textSize="16dp"
                        android:paddingLeft="10dp"
                        android:textAlignment="center"
                        android:layout_centerVertical="true"
                        android:gravity="top"
                        android:textColor="@color/Black"
                        android:fontFamily="@font/poppins_regular"
                        android:layout_height="wrap_content">
                    </TextView>

                </RelativeLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Skip"
                    android:id="@+id/skip"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="40dp"
                    android:textSize="16dp"
                    android:drawableTint="@color/White"
                    android:drawableRight="@drawable/chevron_double_right"
                    android:textAlignment="center"
                    android:textColor="@color/White"
                    android:fontFamily="@font/poppins_regular"
                    android:layout_height="wrap_content">
                </TextView>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="480dp"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="15dp"
                    android:visibility="gone"
                    android:background="@drawable/rounded_corner_btn_border_disabled"
                    android:layout_marginRight="30dp"
                    android:layout_height="50dp">
                    <ImageView
                        android:layout_width="20dp"
                        android:src="@drawable/email"
                        android:tint="@color/White"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:layout_height="20dp">
                    </ImageView>
                    <TextView
                        android:layout_width="match_parent"
                        android:text="Sign Up with Email"
                        android:textSize="16dp"
                        android:textAlignment="center"
                        android:layout_centerVertical="true"
                        android:gravity="top"
                        android:textColor="@color/White"
                        android:fontFamily="@font/poppins_regular"
                        android:layout_height="wrap_content">
                    </TextView>

                </RelativeLayout>

            </LinearLayout>

        </RelativeLayout>
        <com.amazing.portfolio.ui.views.LoadingCompound
            android:layout_width="match_parent"
            android:id="@+id/ld"
            android:visibility="gone"
            android:layout_height="match_parent">
        </com.amazing.portfolio.ui.views.LoadingCompound>
    </RelativeLayout>

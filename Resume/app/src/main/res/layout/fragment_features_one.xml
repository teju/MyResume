<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:id="@+id/scrollView"
    android:background="@color/White"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">
    <RelativeLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="match_parent"
            android:id="@+id/imageview"
            android:src="@drawable/bg_img"
            android:adjustViewBounds="true"
            android:layout_height="match_parent">
        </ImageView>

        <LinearLayout
            android:id="@+id/framelayoutfour"
            android:layout_width="match_parent"
            android:visibility="visible"
            android:layout_marginTop="-200dp"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_below="@+id/framelayoutthree"
            android:background="@drawable/dark_brown_gradient"
            android:src="@drawable/smart_o_gee"
            android:layout_marginBottom="@dimen/_100dp"
            app:layout_collapseMode="pin"
            android:scaleType="centerCrop" >
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="120dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="20dp"
                    android:id="@+id/new_capablities"
                    android:fontFamily="@font/poppins_bold"
                    android:textColor="@color/White"
                    android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content">

                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/leads"
                    android:textSize="15dp"
                    android:layout_marginLeft="10dp"
                    android:textAlignment="textEnd"
                    android:fontFamily="@font/poppins_bolditalic"
                    android:textColor="@color/White"
                    android:layout_height="wrap_content">

                </TextView>

            </LinearLayout>
            <com.github.demono.AutoScrollViewPager
                android:id="@+id/viewPager"
                android:layout_width="match_parent"
                android:layout_height="200dp" />
            <TextView
                android:layout_width="wrap_content"
                android:textSize="15dp"
                android:id="@+id/new_capibilities_desc"
                android:padding="15dp"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/White"
                android:layout_height="wrap_content">

            </TextView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/framelayoutthree"
            android:layout_width="match_parent"
            android:visibility="visible"
            android:layout_marginTop="-100dp"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_below="@+id/framelayouttwo"
            android:background="@drawable/biscuit_gradient"
            android:src="@drawable/smart_o_gee"
            android:layout_marginBottom="@dimen/_100dp"
            app:layout_collapseMode="pin"
            android:scaleType="centerCrop" >
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/tv_have_idea"
                android:textSize="20dp"
                android:fontFamily="@font/poppins_bold"
                android:textColor="@color/colorPrimaryDark"
                android:layout_marginTop="120dp"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content">

            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:textSize="20dp"
                android:id="@+id/lets_start_subtitle"
                android:layout_marginLeft="50dp"
                android:textAlignment="textEnd"
                android:fontFamily="@font/poppins_bolditalic"
                android:textColor="@color/colorPrimaryDark"
                android:layout_height="wrap_content">

            </TextView>
            <TextView
                android:layout_width="match_parent"
                android:textSize="15dp"
                android:id="@+id/lets_start"
                android:maxLines="3"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/colorPrimaryDark"
                android:padding="15dp"
                android:layout_height="wrap_content">

            </TextView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/framelayouttwo"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_marginTop="-100dp"
            android:layout_below="@+id/framelayoutone"
            android:visibility="visible"
            android:background="@drawable/peach_gradient"
            android:src="@drawable/smart_o_gee"
            app:layout_collapseMode="pin"
            android:scaleType="centerCrop" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:id="@+id/tv_mobile_app"
                android:layout_marginTop="120dp"
                android:fontFamily="@font/poppins_bold"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20dp">

            </TextView>
            <TextView
                android:layout_width="match_parent"
                android:textSize="12dp"
                android:id="@+id/tv_mobile_app_subtitle"
                android:maxLines="3"
                android:fontFamily="@font/poppins_italic"
                android:textColor="@color/colorPrimaryDark"
                android:layout_marginTop="1dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_height="wrap_content">

            </TextView>
            <include layout="@layout/mobile_app_dev"></include>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/framelayoutone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/light_peach_gradient"
            android:src="@drawable/smart_o_gee"
            app:layout_collapseMode="pin"
            android:orientation="vertical"
            android:scaleType="centerCrop" >
            <TextView
                android:layout_width="wrap_content"
                android:textSize="20dp"
                android:id="@+id/tvworks"
                android:fontFamily="@font/poppins_bold"
                android:textColor="@color/colorPrimaryDark"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content">

            </TextView>
            <TextView
                android:layout_width="match_parent"
                android:id="@+id/tv_new_normal"
                android:textSize="20dp"
                android:textAlignment="textEnd"
                android:fontFamily="@font/poppins_bolditalic"
                android:textColor="@color/colorPrimaryDark"
                android:layout_marginRight="10dp"
                android:layout_height="wrap_content">

            </TextView>
            <include layout="@layout/remote_message"
                android:visibility="visible"
                android:id="@+id/remote_message"></include>
        </LinearLayout>
        <com.amazing.portfolio.ui.views.LoadingCompound
            android:layout_width="match_parent"
            android:id="@+id/ld"
            android:visibility="gone"
            android:layout_marginTop="100dp"
            android:layout_height="match_parent">
        </com.amazing.portfolio.ui.views.LoadingCompound>

    </RelativeLayout>


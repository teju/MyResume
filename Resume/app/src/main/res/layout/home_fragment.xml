<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/myScrollView"
    android:background="@drawable/bg_img"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="250dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="50dp"
                android:adjustViewBounds="true"
                android:src="@drawable/app_o_gee"
                android:layout_height="wrap_content">
            </ImageView>
            <ImageView
                android:layout_width="match_parent"
                android:layout_margin="20dp"
                android:adjustViewBounds="true"
                android:src="@drawable/loading"
                android:id="@+id/welcome"
                android:layout_height="wrap_content">
            </ImageView>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="WHAT WE DO"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="16dp"
                    android:fontFamily="@font/shipporimincho_extrabold"
                    android:layout_height="wrap_content">
                </TextView>
                <View
                    android:layout_width="1dp"
                    android:layout_marginLeft="10dp"
                    android:background="@color/colorPrimaryDark"
                    android:layout_height="match_parent">
                </View>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="WE DO IT BEST"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/_18sp"
                    android:fontFamily="@font/shipporimincho_extrabold"
                    android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content">
                </TextView>

            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:text="We implement best on every design build wonderful
mobile apps that engage today's consumer."
                android:gravity="center_horizontal"
                android:textColor="@color/colorAccent"
                android:textSize="14sp"
                android:layout_marginRight="15dp"
                android:fontFamily="@font/shipporimincho_extrabold"
                android:layout_marginLeft="15dp"
                android:layout_height="wrap_content">
            </TextView>
            <ImageView
                android:layout_width="match_parent"
                android:layout_margin="10dp"
                android:adjustViewBounds="true"
                android:layout_height="wrap_content">
            </ImageView>
            <ImageView
                android:layout_width="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:src="@drawable/loading"
                android:id="@+id/smart_o_gee"
                android:adjustViewBounds="true"
                android:layout_height="wrap_content">
            </ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18dp"
                android:text="Mobile Apps Development"
                android:layout_marginRight="20dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/shipporimincho_extrabold"
                android:layout_marginLeft="20dp"
                android:layout_height="wrap_content">
            </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="15dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="match_parent"
                    android:adjustViewBounds="true"
                    android:src="@drawable/mobile_apps_dev"
                    android:id="@+id/mobile_apps_dev"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content">
                </ImageView>
                <TextView
                    android:layout_width="match_parent"
                    android:textColor="@color/colorAccent"
                    android:textSize="15dp"
                    android:textAlignment="center"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/tvmobile_apps_dev"
                    android:fontFamily="@font/shipporimincho_extrabold"
                    android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content">
                </TextView>

            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18dp"
                android:text="Native Android &amp; iOS"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/shipporimincho_extrabold"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content">
            </TextView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="10dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="@color/colorAccent"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/we_build"
                    android:textAlignment="center"
                    android:layout_below="@+id/native_sdk_apps"
                    android:textSize="15dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/poppins_bold"
                    android:layout_height="wrap_content">
                </TextView>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_alignParentRight="true"
                    android:id="@+id/native_sdk_apps"
                    android:adjustViewBounds="true"
                    android:layout_height="wrap_content">
                </ImageView>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_marginLeft="10dp"
                    android:layout_centerVertical="true"
                    android:adjustViewBounds="true"
                    android:id="@+id/super_user"
                    android:layout_height="100dp">
                </ImageView>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="120dp"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="15dp"
                        android:src="@drawable/square"
                        android:paddingTop="5dp"
                        android:layout_height="15dp">
                    </ImageView>

                    <TextView
                        android:id="@+id/tv1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/shipporimincho_extrabold"
                        android:layout_centerVertical="true"
                        android:paddingLeft="15dp"
                        android:textAlignment="center"
                        android:textColor="@color/Black"
                        android:textSize="15dp"></TextView>

                </RelativeLayout>
                <ImageView
                    android:layout_width="100dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="10dp"
                    android:layout_centerVertical="true"
                    android:id="@+id/friendly_apps"
                    android:adjustViewBounds="true"
                    android:layout_height="100dp">
                </ImageView>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_marginLeft="10dp"
                    android:adjustViewBounds="true"
                    android:id="@+id/imgcloud_support"
                    android:layout_centerVertical="true"
                    android:layout_height="100dp">
                </ImageView>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/cloud_support"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="120dp"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="15dp"
                        android:src="@drawable/square"
                        android:paddingTop="5dp"
                        android:layout_height="15dp">
                    </ImageView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:textAlignment="center"
                        android:paddingLeft="25dp"
                        android:id="@+id/tv2"
                        android:textColor="@color/Black"
                        android:textSize="15dp"
                        android:fontFamily="@font/shipporimincho_extrabold"
                        android:layout_height="wrap_content">
                    </TextView>

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/cloud_support"
                    android:layout_marginRight="120dp"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="15dp"
                        android:src="@drawable/square"
                        android:paddingTop="5dp"
                        android:layout_height="15dp">
                    </ImageView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:textAlignment="center"
                        android:paddingLeft="25dp"
                        android:id="@+id/tv3"
                        android:textColor="@color/Black"
                        android:textSize="15dp"
                        android:fontFamily="@font/shipporimincho_extrabold"
                        android:layout_height="wrap_content">
                    </TextView>

                </RelativeLayout>


                <ImageView
                    android:layout_width="100dp"
                    android:layout_alignParentRight="true"
                    android:id="@+id/icn_1"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:adjustViewBounds="true"
                    android:layout_height="100dp">
                </ImageView>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_marginLeft="10dp"
                    android:layout_centerVertical="true"
                    android:id="@+id/project_managers"
                    android:adjustViewBounds="true"
                    android:layout_height="100dp">
                </ImageView>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="15dp"
                        android:src="@drawable/square"
                        android:paddingTop="5dp"
                        android:layout_height="15dp">
                    </ImageView>
                    <TextView
                        android:layout_width="130dp"
                        android:id="@+id/tv4"
                        android:textAlignment="center"
                        android:textColor="@color/Black"
                        android:textSize="15dp"
                        android:fontFamily="@font/shipporimincho_extrabold"
                        android:layout_height="wrap_content">
                    </TextView>

                </RelativeLayout>

                <ImageView
                    android:layout_width="100dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="10dp"
                    android:adjustViewBounds="true"
                    android:id="@+id/icn_2"
                    android:layout_centerVertical="true"
                    android:layout_height="100dp">
                </ImageView>

            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:id="@+id/lets_connect"
                android:adjustViewBounds="true"
                android:layout_height="wrap_content">
            </ImageView>
            <include layout="@layout/whatsapp"></include>

        </LinearLayout>
        <com.amazing.portfolio.ui.views.LoadingCompound
            android:layout_width="match_parent"
            android:id="@+id/ld"
            android:visibility="gone"
            android:layout_marginTop="400dp"
            android:layout_height="match_parent">
        </com.amazing.portfolio.ui.views.LoadingCompound>

    </RelativeLayout>
</ScrollView>

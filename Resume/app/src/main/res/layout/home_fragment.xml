<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/myScrollView"
    android:background="@color/White"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout android:layout_width="match_parent"
        android:background="@color/White"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="@color/White"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="wrap_content"
                    android:adjustViewBounds="true"
                    android:src="@drawable/welcome"
                    android:layout_marginTop="30dp"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/welcome"
                    android:layout_height="wrap_content">
                </ImageView>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:background="@color/White"
                    android:layout_height="50dp">
                    <ImageView
                        android:layout_width="150dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:adjustViewBounds="true"
                        android:src="@drawable/app_o_gee"
                        android:layout_height="wrap_content">
                    </ImageView>

                </RelativeLayout>
            </RelativeLayout>
            <ImageView
                android:layout_width="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/super_apps"
                android:layout_marginTop="-120dp"
                android:layout_centerHorizontal="true"
                android:id="@+id/super_apps"
                android:layout_height="wrap_content">
            </ImageView>
            <ImageView
                android:layout_width="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/smart_o_gee"
                android:layout_marginTop="-110dp"
                android:layout_centerHorizontal="true"
                android:id="@+id/smart_o_gee"
                android:layout_height="wrap_content">
            </ImageView>
            <ImageView
                android:layout_width="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/adl"
                android:layout_marginTop="-110dp"
                android:layout_centerHorizontal="true"
                android:id="@+id/adl"
                android:layout_height="wrap_content">
            </ImageView>
            <ImageView
                android:layout_width="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/native_sdk"
                android:layout_marginTop="-110dp"
                android:layout_centerHorizontal="true"
                android:id="@+id/native_sdk"
                android:layout_height="wrap_content">
            </ImageView>
            <ImageView
                android:layout_width="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/app_features"
                android:layout_marginTop="-110dp"
                android:layout_centerHorizontal="true"
                android:id="@+id/app_features"
                android:layout_height="wrap_content">
            </ImageView>
            <ImageView
                android:layout_width="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/lets_connect"
                android:layout_marginTop="-110dp"
                android:layout_centerHorizontal="true"
                android:id="@+id/lets_connect"
                android:layout_height="wrap_content">
            </ImageView>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:id="@+id/connect"
                android:layout_marginBottom="0dp"
                android:layout_marginTop="-90dp"
                android:layout_height="wrap_content">
                <include layout="@layout/whatsapp"></include>
            </RelativeLayout>

        </LinearLayout>
        <com.amazing.portfolio.ui.views.LoadingCompound
            android:layout_width="match_parent"
            android:id="@+id/ld"
            android:visibility="gone"
            android:layout_marginTop="400dp"
            android:layout_height="match_parent">
        </com.amazing.portfolio.ui.views.LoadingCompound>

    </RelativeLayout>
</ScrollView>

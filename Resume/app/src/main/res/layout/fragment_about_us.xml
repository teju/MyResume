<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:id="@+id/myScrollView"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/root_container"
        android:background="@color/White"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="match_parent"
            android:src="@drawable/about_us_bg"
            android:adjustViewBounds="true"
            android:alpha="0.6"
            android:layout_height="match_parent">
        </ImageView>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:background="@color/White"
                android:layout_height="50dp">
                <ImageView
                    android:layout_width="150dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/app_o_gee"
                    android:layout_height="wrap_content">
                </ImageView>

            </RelativeLayout>
            <ImageView
                android:layout_width="150dp"
                android:text="About Us"
                android:adjustViewBounds="true"
                android:src="@drawable/about_us_head"
                android:textColor="@color/Black"
                android:layout_marginTop="0dp"
                android:layout_marginRight="20dp"
                android:textSize="25dp"
                android:layout_gravity="right"
                android:fontFamily="@font/shipporimincho_extrabold"
                android:layout_height="wrap_content">
            </ImageView>
            <TextView
                android:layout_width="match_parent"
                android:text="@string/aboutus_1"
                android:textColor="@color/Black"
                android:id="@+id/aboutus_1"
                android:layout_marginTop="0dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:textSize="16dp"
                android:fontFamily="@font/shipporimincho_semibold"
                android:layout_height="wrap_content">
            </TextView>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/ll_second"
                android:visibility="visible"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="100dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/our_services"
                    android:layout_height="wrap_content">
                </ImageView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_marginLeft="0dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:text="@string/aboutus_2"
                        android:textColor="@color/Black"
                        android:layout_marginTop="8dp"
                        android:textSize="15dp"
                        android:fontFamily="@font/shipporimincho_semibold"
                        android:layout_height="wrap_content">
                    </TextView>
                    <ImageView
                        android:layout_width="200dp"
                        android:scaleType="fitXY"
                        android:adjustViewBounds="true"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center"
                        android:src="@drawable/about_us_design"
                        android:layout_height="120dp">
                    </ImageView>

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:id="@+id/ll_third"
                android:visibility="visible"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="180dp"
                    android:scaleType="fitXY"
                    android:adjustViewBounds="true"
                    android:src="@drawable/about_us_app_dev"
                    android:layout_height="120dp">
                </ImageView>
                <ImageView
                    android:layout_width="wrap_content"
                    android:src="@drawable/end_to_end"
                    android:adjustViewBounds="true"
                    android:layout_marginLeft="@dimen/_2dp"
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content">
                </ImageView>

            </LinearLayout>
            <ImageView
                android:layout_width="230dp"
                android:adjustViewBounds="true"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/our_story"
                android:layout_height="wrap_content">
            </ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:text="@string/aboutus_4"
                android:textColor="@color/Black"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:textSize="15dp"
                android:fontFamily="@font/shipporimincho_semibold"
                android:layout_height="wrap_content">
            </TextView>
            <ImageView
                android:layout_width="230dp"
                android:adjustViewBounds="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:src="@drawable/alpha_team"
                android:layout_height="wrap_content">
            </ImageView>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:id="@+id/recyclerView"
                android:layout_marginTop="10dp"
                android:layout_height="match_parent">
            </androidx.recyclerview.widget.RecyclerView>
            <ImageView
                android:layout_width="match_parent"
                android:src="@drawable/about_us_contact"
                android:adjustViewBounds="true"
                android:layout_marginBottom="60dp"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content">
            </ImageView>
        </LinearLayout>
        <com.amazing.portfolio.ui.views.LoadingCompound
            android:layout_width="match_parent"
            android:id="@+id/ld"
            android:visibility="gone"
            android:layout_marginTop="100dp"
            android:layout_height="match_parent">
        </com.amazing.portfolio.ui.views.LoadingCompound>

    </RelativeLayout>
</androidx.core.widget.NestedScrollView>

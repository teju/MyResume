<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:elevation="10dp"
            android:id="@+id/rl_whatsapp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="10dp"
            android:visibility="gone"
            android:layout_marginBottom="140dp"
            android:padding="20dp"
            android:orientation="vertical"
            app:cardBackgroundColor="@color/theme_green"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="50dp"
                    android:src="@drawable/whatsapp"
                    android:layout_margin="25dp"
                    android:id="@+id/whatsapp_icon"
                    android:layout_height="50dp">
                </ImageView>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="10dp"
                    android:layout_toRightOf="@+id/whatsapp_icon"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Talk to us!"
                        android:fontFamily="@font/poppins_bold"
                        android:textColor="@color/White"
                        android:layout_height="wrap_content">

                    </TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Hi! Click one of our member below to chat on Whatsapp."
                        android:fontFamily="@font/poppins_regular"
                        android:textColor="@color/White"
                        android:textSize="14dp"
                        android:layout_height="wrap_content">

                    </TextView>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:background="@color/White"
                    android:orientation="vertical"
                    android:layout_below="@+id/whatsapp_icon"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/Black"
                        android:fontFamily="@font/poppins_regular"
                        android:text="The team typically replies in a few minutes.Whats App US."
                        android:layout_height="wrap_content">

                    </TextView>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:background="@color/White"
                        android:visibility="visible"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="10dp"
                        android:id="@+id/contact_us_full"
                        android:layout_gravity="bottom"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="50dp"
                            android:src="@drawable/whatsapp"
                            android:layout_gravity="center_vertical"
                            android:adjustViewBounds="true"
                            android:layout_height="50dp">
                        </ImageView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="15dp"
                            android:layout_centerHorizontal="true"
                            android:textAlignment="center"
                            android:text="Need Help? Chat with us"
                            android:textColor="@color/Black"
                            android:textSize="15dp"
                            android:fontFamily="@font/poppins_bold"
                            android:layout_height="wrap_content">
                        </TextView>
                    </LinearLayout>

                </LinearLayout>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginBottom="140dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:visibility="visible"
            android:id="@+id/contact_us"
            android:layout_gravity="bottom"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="50dp"
                android:id="@+id/whatsapp"
                android:src="@drawable/whatsapp"
                android:layout_gravity="center_vertical"
                android:adjustViewBounds="true"
                android:layout_height="50dp">
            </ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/tvChat"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:layout_centerHorizontal="true"
                android:textAlignment="center"
                android:text="Need Help? Chat with us"
                android:textColor="@color/Black"
                android:textSize="15dp"
                android:fontFamily="@font/poppins_bold"
                android:layout_height="wrap_content">
            </TextView>

        </LinearLayout>

    </RelativeLayout>
</androidx.core.widget.NestedScrollView>